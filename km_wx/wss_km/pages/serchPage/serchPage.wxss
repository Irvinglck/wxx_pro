
/* 产品列表 */
.pro-container .pro-items{
  width: 94%;
  /* height: 900rpx; */
  /* border: 1rpx solid red; */
  margin: 0 auto;
  margin-top: 0rpx;
  box-sizing: border-box;
}
.pro-items .pro-item{
  width: 100%;
  height: 220rpx;
  /* border: 1px solid red; */
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1rpx solid #EDEDED;
}
.pro-items .pro-item .info-img {
  width: 172rpx;
  height: 172rpx;
  border: 1rpx solid #EDEDED;
}
.pro-items .pro-item .info-img> image{
  width: 99%;
  height: 98%;
}
.pro-items .pro-item .info {
  width: 60%;
  height: 172rpx;
  /* border: 1rpx solid red; */
}
.info .info-title{
  font-size: 32rpx;
  font-weight: 700;
}
.rt{
  width: 100%;
  height: 34rpx;
  /* border: 1rpx solid red; */
  font-size: 24rpx;
}
.rt .rate1, .rate2{
  display: inline-block;
  width: 150rpx;
  height: 34rpx;
  text-align: center;
}
.rate1{
  color: #2D94FF;
  border: 1rpx solid #2D94FF;
}
.rate2{
  color:#666666;
  border: 1rpx solid #666666;
  margin-left: 10rpx;
}
.down-cron{
  margin-top: 4rpx;
  width: 100%;
  height: 50rpx;
  /* border: 1rpx solid red; */
  color: #2D94FF;
  font-size: 34rpx;
  line-height: 50rpx;
}
.down-cron > image{
  margin-left: 8rpx;
  width: 30rpx;
  height: 30rpx;
}

.pro-items .pro-item .more-info{
  width: 40rpx;
  height: 172rpx;
  /* border: 1rpx solid red; */
  line-height: 172rpx;
}
.more-info> image{
  width: 30rpx;
  height: 40rpx;
}