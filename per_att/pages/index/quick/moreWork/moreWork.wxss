.container{
   width: 96%;
   margin: 0 auto;
   /* border: 1px solid red; */
}
.header{
   width: 100%;
   height: 100rpx;
   display: flex;
   flex-direction: row;
   justify-content: space-between;
   font: 28rpx;
   font-weight: 700;
   line-height: 80rpx;
   box-sizing: border-box;
   padding: 0 14rpx;
   border-bottom: 24rpx solid #EDEDED;
}
.header >text:nth-child(2){
   color: #5F75E2;
   font-weight: 400;
}
