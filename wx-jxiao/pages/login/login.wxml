<!--pages/login/login.wxml-->
<view class="container">
  <text>上海邮佳驾校</text>
  <input type="number" bindblur="getPhone" class="phone_number" placeholder="请输入手机号码"></input>
  <view class="code">
    <input class="code_phone" bindblur="getCode" placeholder="请输入验证码"></input>
    <button class="btn_code">获取验证码</button>
  </view>
  <button bindtap="login" class="btn_login">登陆系统</button>
</view>

